<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
	   http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:consumer check="false" timeout="${dubbo.timeout}" />
    
    <!-- 资媒服务 -->
    <dubbo:reference id="pfMediaFacade" interface="com.sm.open.core.facade.pf.biz.media.PfMediaFacade"/>

    <!-- 字典服务 -->
    <dubbo:reference id="pfDicFacade" interface="com.sm.open.core.facade.pf.system.dic.PfDicFacade"/>

    <!-- 监控服务 -->
    <dubbo:reference id="pfMonitorFacade" interface="com.sm.open.core.facade.pf.system.monitor.PfMonitorFacade"/>

    <!-- 公告服务 -->
    <dubbo:reference id="pfNoticeFacade" interface="com.sm.open.core.facade.pf.system.notice.PfNoticeFacade"/>

    <!-- 参数服务 -->
    <dubbo:reference id="pfParamFacade" interface="com.sm.open.core.facade.pf.system.param.PfParamFacade"/>

    <!-- 用户服务 -->
    <dubbo:reference id="pfUserFacade" interface="com.sm.open.core.facade.pf.user.login.PfUserFacade"/>

    <!-- 菜单服务 -->
    <dubbo:reference id="pfMenuFacade" interface="com.sm.open.core.facade.pf.user.menu.PfMenuFacade"/>

    <!-- 角色服务 -->
    <dubbo:reference id="pfRoleFacade" interface="com.sm.open.core.facade.pf.user.role.PfRoleFacade"/>

    <!-- 系统设置服务 -->
    <dubbo:reference id="pfSetFacade" interface="com.sm.open.core.facade.pf.system.set.PfSetFacade"/>

    <!-- 消息模板服务 -->
    <dubbo:reference id="pfMessageFacade" interface="com.sm.open.core.facade.pf.system.message.PfMessageFacade"/>
</beans>

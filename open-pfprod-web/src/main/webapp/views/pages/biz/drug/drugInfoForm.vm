<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>${formType}</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="${contextPath}/public/layui/plugins/layui/css/layui.css" media="all">
    <link rel="stylesheet" href="${contextPath}/public/biz/css/common.css">
    <link rel="stylesheet" type="text/css" href="${contextPath}/public/biz/iconfont/iconfont.css">

    <script>
        var basePath = '${basePath}';
        var contextPath = '${contextPath}';
        var formType = '${formType}';
    </script>
</head>

<body class="body-my">
<div class="wrapper-content">
    <form class="layui-form" id="drugInfoForm">
        <div hidden>
            <input name="idDrugs" hidden>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">药品名称<i class="iconfont icon-required" style="color: #f03f2d"></i></label>
            <div class="layui-input-block">
                <input type="text" name="name" lay-verify="required|commonLength" lay-vertype="tips" autocomplete="off"
                       class="layui-input" placeholder="药品名称">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">药品目录</label>
            <div class="layui-input-block">
                <select name="cdDrugsclass"  autocomplete="off" lay-verify="commonLength"
                        lay-vertype="tips" placeholder="药品目录">
                    <option value="">请选择</option>
                    #foreach($element in $drugCatalogue)
                        <option value="$element.id">$element.name</option>
                    #end
                </select>

            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">药品规格</label>
            <div class="layui-input-block">
                <input type="text" name="spec" lay-verify="commonLength" lay-vertype="tips" autocomplete="off"
                       class="layui-input" placeholder="药品规格">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">药品单位</label>
            <div class="layui-input-block">
                <input type="text" name="unit" autocomplete="off" lay-verify="commonLength" lay-vertype="tips"
                       class="layui-input" placeholder="药品单位">
            </div>
        </div>
        <div class="layui-form-item layui-form-text">
            <label class="layui-form-label">拼音码</label>
            <div class="layui-input-block">
                <input type="text" name="pinyin" autocomplete="off" lay-verify="commonLength" lay-vertype="tips"
                       class="layui-input" placeholder="拼音码">
            </div>
        </div>
        <div class="layui-form-item layui-form-text">
            <label class="layui-form-label">激活状态<i class="iconfont icon-required"
                                                   style="color: #f03f2d"></i></label>
            <div class="layui-input-block">
                <input type="checkbox" checked="" name="fgActive" lay-skin="switch"
                        value="1" lay-text="已激活|未激活" >
            </div>
        </div>

        <div class="layui-form-item">
            <div class="layui-input-block">
                <button class="layui-btn" lay-submit="" lay-filter="addDrugInfo">
                    <i class="iconfont icon-save-copy"></i> 保存
                </button>
                #if(${formType} == 'add')
                    <button type="reset" class="layui-btn layui-btn-danger">
                        <i class="iconfont icon-reset"></i> 重置
                    </button>
                #end
            </div>
        </div>
    </form>
</div>

<script src="${contextPath}/public/layui/plugins/layui/layui.all.js"></script>
<script src="${contextPath}/public/common/js/jquery.min.js"></script>
<script src="${contextPath}/public/common/js/jquery.formautofill.js"></script>
<script src="${contextPath}/public/biz/js/biz/drug/drugInfoFormController.js"></script>
<script>
    function fullForm(data) {
        $(document).ready(function () {
            $("#drugInfoForm").autofill(data);
            layui.use('form',function(){
                layui.form.render();
            });
        });

    }
</script>

</body>
</html>
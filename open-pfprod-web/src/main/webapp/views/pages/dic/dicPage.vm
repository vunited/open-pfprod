<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>字典管理</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="${contextPath}/public/layui/plugins/layui/css/layui.css" media="all">
    <link rel="stylesheet" href="${contextPath}/public/biz/css/common.css">
    <link rel="stylesheet" type="text/css" href="${contextPath}/public/biz/iconfont/iconfont.css">

    <script src="${contextPath}/public/biz/js/collapse.js"></script>
    <script>
        var basePath = '${basePath}';
    </script>
    <style>
        html, body {
            margin: 0;
            height: 100%;
            width: 100%;
            border: none;
            overflow: hidden;
        }

        .main {
            width: 100%;
            height: 100%;
            text-align: left;
        }

        .main_left {
            margin: 0px 0px 10px 10px;
            width: 250px;
        }

        .main_right {
            margin: 10px 10px 10px 0px;
            height: 100%;
        }

        .picBox {
            width: 10px;
            text-align: center;
            background: url('${contextPath}/public/biz/img/right.gif') no-repeat center center

        }

        .main_left, .picBox {
            float: left;
            height: 100%;
        }
    </style>
</head>

<body>
<div class="main">
    <div class="main_left" id="frmTitle" name="fmTitle">
        <form class="layui-form">
            <div class="layui-inline">
                <div class="layui-btn-group">
                    <button type="button" class="layui-btn layui-btn-small addDic">
                        <i class="iconfont icon-add"></i>
                    </button>
                    <button type="button" class="layui-btn layui-btn-small editDic">
                        <i class="iconfont icon-edit"></i>
                    </button>
                    <button type="button" class="layui-btn layui-btn-small delDic">
                        <i class="iconfont icon-delete"></i>
                    </button>
                </div>
            </div>
            <div class="layui-inline">
                <div class="layui-input-inline">
                    <input type="text" name="dicName" placeholder="字典名称" class="layui-input"
                           style="height:30px; width: 96px;">
                </div>
            </div>
            <div class="layui-inline">
                <div class="layui-input-inline">
                    <button type="button" class="layui-btn layui-btn-small" lay-submit lay-filter="dicSearchFilter">
                        <i class="iconfont icon-query"></i>
                    </button>
                </div>
            </div>
        </form>
        <table id="dicTable" lay-filter="dicTableFilter">
        </table>
    </div>

    <div class="picBox" onclick="switchSysBar()" id="switchPoint">
    </div>

    <div class="main_right">
        <form class="layui-form">
            <div class="layui-inline">
                <div class="layui-btn-group">
                    <button type="button" class="layui-btn layui-btn-small addEnum">
                        <i class="iconfont icon-add"></i> 增加
                    </button>
                    <button type="button" class="layui-btn layui-btn-small editEnum">
                        <i class="iconfont icon-edit"></i> 编辑
                    </button>
                    <button type="button" class="layui-btn layui-btn-small delEnum">
                        <i class="iconfont icon-delete"></i> 删除
                    </button>
                    <button type="button" class="layui-btn layui-btn-small refreshCache">
                        <i class="iconfont icon-refresh"></i> 刷新缓存
                    </button>
                </div>
            </div>
            <div class="layui-inline">
                <div class="layui-input-inline">
                    <input type="text" name="enumName" placeholder="请输入枚举名称" class="layui-input"
                           style="height:30px;">
                </div>
            </div>
            <div class="layui-inline">
                <div class="layui-input-inline">
                    <button type="button" class="layui-btn layui-btn-small" lay-submit lay-filter="enumSearchFilter">
                        <i class="iconfont icon-query"></i> 查询
                    </button>
                    <button type="reset" class="layui-btn layui-btn-small layui-btn-primary">
                        <i class="iconfont icon-reset"></i> 重置
                    </button>
                </div>
            </div>
        </form>

        <table id="enumTable" lay-filter="enumTableFilter">
        </table>
    </div>
</div>


<script src="${contextPath}/public/layui/plugins/layui/layui.js"></script>
<script src="${contextPath}/public/biz/js/dicController.js"></script>

<script type="text/html" id="dicBar">
    <a class="layui-btn layui-btn-mini" lay-event="detail"><i class="iconfont icon-detail"></i> 详情</a>
</script>

<script type="text/html" id="enumBar">
    <a class="layui-btn layui-btn-mini" lay-event="edit"><i class="iconfont icon-edit"></i> 编辑</a>
</script>

</body>

</html>